{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "repo": {
      "type": "string",
      "format": "uri"
    },
    "description": {
      "type": "string",
      "maxLength": 200
    },
    "type": {
      "type": "string",
      "enum": ["lib", "app"]
    },
    "build": {
      "oneOf": [
        {
          "type": "string",
          "enum": ["wmake", "cmake"]
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "version": {
      "type": "array",
      "items": {
        "oneOf": [
          { "type": "string" },
          { "type": "integer" }
        ]
      }
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["name", "repo", "build"]
}
